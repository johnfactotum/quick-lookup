{
    "app-id": "com.github.johnfactotum.QuickLookup",
    "runtime": "org.gnome.Platform",
    "runtime-version": "master",
    "sdk": "org.gnome.Sdk",
    "command": "quick-lookup",
    "finish-args": [
        "--share=network",
        "--share=ipc",
        "--socket=fallback-x11",
        "--socket=wayland",
        "--device=dri"
    ],
    "modules": [
        {
            "name": "quick-lookup",
            "buildsystem": "meson",
            "sources": [
                {
                    "type": "dir",
                    "path": "./"
                }
            ]
        }
    ]
}
